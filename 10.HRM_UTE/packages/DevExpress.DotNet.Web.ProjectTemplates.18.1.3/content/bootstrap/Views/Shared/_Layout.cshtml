<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - DevExpress Bootstrap ASP.NET Core Starter Application</title>    
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" />    
    @Html.DevExpress().StyleSheets()
</head>
<body>
    <nav class="navbar mb-4 navbar-expand-md navbar-dark bg-dark">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            DevExpress Bootstrap Project
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMenu">
            @(Html.DevExpress()
                .BootstrapMenu()
                .Name("navigationMenu")
                .Items(i => {
                    i.Add()
                       .NavigateUrl(Url.Action("GridView", "Sample"))
                       .Text("GridView");
                    i.Add()
                       .NavigateUrl(Url.Action("RegisterForm", "Sample"))
                       .Text("Editors");
                 })
                 .SettingsBootstrap(bootstrap => bootstrap.NavbarMode(true)))
        </div>
		@*#if(authentication=="identity") {
		@await Html.PartialAsync("_LoginPartial")
		#endif*@
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; 2006-@DateTime.Now.Year - Developer Express Inc</p>
        </footer>
    </div>
    
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
	<script src="~/lib/popper.js/dist/umd/popper.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@*#if(authentication=="identity") {
	@RenderSection("Scripts", required: false)
	#endif*@
    @Html.DevExpress().Scripts()
</body>
</html>
